@model TP1_KarineDunberry.Models.Reservation
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Détails de la réservation";
}

<div class="row bgBlanc margin-sm">
    <div class="col-12 col-md-6 colonne-padding">
        <h1 class="txtJaune">Détails de la réservation</h1>
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Prénom)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Prénom)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TypeReservation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TypeReservation)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Courriel)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Courriel)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DateHeure)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DateHeure)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Téléphone)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Téléphone)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.nbPersonnes)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.nbPersonnes)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.StatutReservation)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StatutReservation)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ReservationID" class="btn-jaune-menu btn-form">Modifier</a> |
            @if ((await AuthorizationService.AuthorizeAsync(User, "AdministrateurSeulement")).Succeeded)
            {
                <a asp-action="IndexAdministrateur" class="txtJaune link-table">Retour</a>
            }
            else
            {
                <a asp-action="IndexUtilisateurConnecte" class="txtJaune link-table">Retour</a>
            }
        </div>
    </div>
    <div class="col-md-6 colonne-padding image img-promo-details"></div>
</div>
